  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.openengsb.openticket</groupId>
  <artifactId>openticket-parent</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <name>OpenTicket :: Parent</name>

  <description>Help desk workflow application using OpenEngSB</description>

  <properties>
    <org.osgi.service.http.port>8080</org.osgi.service.http.port>
    <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
    <openengsb.version>1.0.0-SNAPSHOT</openengsb.version>
    <plugin.assembly.version>2.2-beta-5</plugin.assembly.version>
    <jdk.version>1.6</jdk.version>
    <plugin.pax.version>1.4</plugin.pax.version>
  </properties>

  <packaging>pom</packaging>

  <modules>
    <module>poms</module>
    <module>provision</module>
    <module>assembly</module>
    <module>ui</module>
  </modules>
  
  <scm>
    <connection>scm:git:git://github.com/OpenTicket/openticket.git</connection>
    <developerConnection>scm:git:git@github.com:OpenTicket/openticket.git</developerConnection>
